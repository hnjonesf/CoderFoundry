@model mvcTesting0113.Models.Post

@{
    ViewBag.Title = "Blog Details";
}

<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-12">

            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by <span>Hugh Jones</span>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>
                <span class="glyphicon glyphicon-time"></span> Posted on @Model.Created.DateTime.ToLongDateString()
            </p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="@Url.Content(Model.MediaURL)" alt="">

            <hr>

            <!-- Post Content -->
            <div>
                @Html.Raw(Model.Body)
            </div>
            <hr>

            <!-- Blog Comments -->
            <!-- Comments Form -->
            @using (Html.BeginForm("AddComment", "Posts"))
            {

                <div class="well">
                    <h5>Add a comment</h5>
                    @Html.AntiForgeryToken()
                    @Html.Hidden("PostId", Model.Id)
                    @Html.TextArea("Body", "", new { @class = "form-control" })
                    <input type="submit" value="Submit" class="btn btn-sm btn-primary pull-right" />
                    <span class="clearfix"></span>
                </div>
            }
            <hr>

            <!-- Posted Comments -->
            <!-- Comment -->
            @foreach (var comment in Model.Comments)
            {
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading">
                            @comment.Author.DisplayName
                            <small>@comment.Created.DateTime.ToShortDateString()</small>
                        </h4>
                        <span>
                            @comment.Body
                        </span>
                    </div>
                </div>
            }
            

        </div>

        <!-- Blog Sidebar Widgets Column -->
     

    </div>
    <!-- /.row -->

    <hr>
<p>
    @*Next line is to add a comment to the post*@
    @Html.ActionLink("Comment", "Create", "Comments", new { id = Model.Id }, null) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright © Your Website 2015</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>

